<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import com.jfoenix.controls.JFXButton?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.layout.FlowPane?>
<AnchorPane stylesheets="@style.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="com.github.jadamon42.adventure.engine.ui.ButtonInputUI">
    <VBox prefHeight="400.0" prefWidth="550.0">
        <HBox styleClass="title-bar">
            <Label text="Adventure Game" styleClass="title-label"/>
        </HBox>
        <ScrollPane fx:id="messageScrollPane" fitToWidth="true" prefHeight="550">
            <VBox fx:id="messageContainer" spacing="10" style="-fx-padding: 10;">
                <HBox styleClass="message-container">
                    <Label text="You find yourself at a crossroads. Choose wisely, as your decision may affect your journey." styleClass="message"/>
                    <FontAwesomeIconView glyphName="ROTATE_RIGHT"/>
                </HBox>
                <HBox styleClass="user-message-container">
                    <Label text="Which way should I go?" styleClass="user-message"/>
                </HBox>
                <HBox styleClass="message-container">
                    <Label text="Where do you want to go?" styleClass="message"/>
                    <FontAwesomeIconView glyphName="ROTATE_RIGHT"/>
                </HBox>
            </VBox>
        </ScrollPane>
        <FlowPane styleClass="button-input-container">
            <JFXButton styleClass="choice-button" text="I want to go left"/>
            <JFXButton styleClass="choice-button" text="I want to go right"/>
            <JFXButton styleClass="choice-button" text="Screw you, I'm going to stand still"/>
            <JFXButton styleClass="choice-button" text="I don't know..."/>
        </FlowPane>
    </VBox>
</AnchorPane>
